{
    "version": "2.0.0",
    "tasks": [
        // Build/Lint tasks
        {
            "label": "Run Ruff Check",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "ruff", "check", "tools/python/src/", "samples/python/src/"],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": ["-m", "ruff", "check", "tools/python/src/", "samples/python/src/"]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "icon": { "id": "check" },
            "presentation": { "reveal": "always" },
            "problemMatcher": []
        },
        {
            "label": "Run Flake8 Linting",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "flake8", "tools/python/src/", "samples/python/src/"],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": ["-m", "flake8", "tools/python/src/", "samples/python/src/"]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "icon": { "id": "check" },
            "problemMatcher": ["$python"],
            "presentation": { "reveal": "always" }
        },
        {
            "label": "Run Python Linting",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "pylint", "tools/python/src/", "samples/python/src/"],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": ["-m", "pylint", "tools/python/src/", "samples/python/src/"]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "icon": { "id": "tools" },
            "problemMatcher": ["$python"]
        },
        {
            "label": "Run Mypy Type Checks",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "mypy", "tools/python/src/", "samples/python/src/"],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": ["-m", "mypy", "tools/python/src/", "samples/python/src/"]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "icon": { "id": "check" },
            "problemMatcher": ["$python"]
        },

        // Test tasks
        {
            "label": "Run Unit Tests",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "pytest", "tools/python/tests/", "samples/python/tests/"],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": ["-m", "pytest", "tools/python/tests/", "samples/python/tests/"]
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "icon": { "id": "beaker" },
            "problemMatcher": ["$python"]
        },

        // Bicep tasks
        {
            "label": "Build Bicep",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-Command",
                "az bicep build --file ./infra/main.bicep; Get-ChildItem -Path ./infra -Filter 'main.bicep' -Recurse | ForEach-Object { if ($_.FullName -ne (Resolve-Path './infra/main.bicep').Path) { az bicep build --file $_.FullName } }"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": { "reveal": "always" },
            "icon": { "id": "azure" },
            "problemMatcher": []
        }
    ]
}
