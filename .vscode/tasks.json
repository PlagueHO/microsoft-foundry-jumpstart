{
    "version": "2.0.0",
    "tasks": [
        // Build/Lint tasks
        {
            "label": "python: ruff check",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "ruff", "check", "tools/python/src/", "samples/python/src/"],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": ["-m", "ruff", "check", "tools/python/src/", "samples/python/src/"]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "icon": { "id": "check" },
            "presentation": { "reveal": "always" },
            "problemMatcher": []
        },
        {
            "label": "python: flake8",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "flake8", "tools/python/src/", "samples/python/src/"],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": ["-m", "flake8", "tools/python/src/", "samples/python/src/"]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "icon": { "id": "check" },
            "problemMatcher": ["$python"],
            "presentation": { "reveal": "always" }
        },
        {
            "label": "python: pylint",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "pylint", "tools/python/src/", "samples/python/src/"],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": ["-m", "pylint", "tools/python/src/", "samples/python/src/"]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "icon": { "id": "tools" },
            "problemMatcher": ["$python"]
        },
        {
            "label": "python: mypy",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "mypy", "tools/python/src/", "samples/python/src/"],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": ["-m", "mypy", "tools/python/src/", "samples/python/src/"]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "icon": { "id": "check" },
            "problemMatcher": ["$python"]
        },

        // Test tasks
        {
            "label": "python: test",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "pytest", "tools/python/tests/", "samples/python/tests/"],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": ["-m", "pytest", "tools/python/tests/", "samples/python/tests/"]
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "icon": { "id": "beaker" },
            "problemMatcher": ["$python"]
        },

        // Bicep tasks
        {
            "label": "bicep: build",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-Command",
                "az bicep build --file ./infra/main.bicep; Get-ChildItem -Path ./infra -Filter 'main.bicep' -Recurse | ForEach-Object { if ($_.FullName -ne (Resolve-Path './infra/main.bicep').Path) { az bicep build --file $_.FullName } }"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": { "reveal": "always" },
            "icon": { "id": "azure" },
            "problemMatcher": []
        },

        // Markdown tasks
        {
            "label": "markdown: lint",
            "type": "shell",
            "command": "pnpm",
            "args": ["lint:md"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "test",
            "icon": {
                "id": "checklist",
                "color": "terminal.ansiMagenta"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "markdown: fix",
            "type": "shell",
            "command": "pnpm",
            "args": ["lint:md:fix"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "icon": {
                "id": "wrench",
                "color": "terminal.ansiGreen"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },

        // .NET tasks
        {
            "label": "dotnet: build",
            "type": "shell",
            "command": "dotnet",
            "args": ["build", "microsoft-foundry-jumpstart-samples.slnx"],
            "options": {
                "cwd": "${workspaceFolder}/samples/dotnet"
            },
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "icon": {
                "id": "tools",
                "color": "terminal.ansiYellow"
            }
        },
        {
            "label": "dotnet: test",
            "type": "shell",
            "command": "dotnet",
            "args": ["test", "microsoft-foundry-jumpstart-samples.slnx", "--no-build"],
            "options": {
                "cwd": "${workspaceFolder}/samples/dotnet"
            },
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "dependsOn": ["dotnet: build"],
            "icon": {
                "id": "beaker",
                "color": "terminal.ansiCyan"
            }
        },
        {
            "label": "dotnet: test (watch)",
            "type": "shell",
            "command": "dotnet",
            "args": ["watch", "test", "microsoft-foundry-jumpstart-samples.slnx"],
            "options": {
                "cwd": "${workspaceFolder}/samples/dotnet"
            },
            "problemMatcher": "$msCompile",
            "group": "test",
            "isBackground": true,
            "icon": {
                "id": "eye-watch",
                "color": "terminal.ansiCyan"
            }
        },
        {
            "label": "dotnet: clean",
            "type": "shell",
            "command": "dotnet",
            "args": ["clean", "microsoft-foundry-jumpstart-samples.slnx"],
            "options": {
                "cwd": "${workspaceFolder}/samples/dotnet"
            },
            "problemMatcher": "$msCompile",
            "icon": {
                "id": "trash",
                "color": "terminal.ansiRed"
            }
        },
        {
            "label": "dotnet: restore",
            "type": "shell",
            "command": "dotnet",
            "args": ["restore", "microsoft-foundry-jumpstart-samples.slnx"],
            "options": {
                "cwd": "${workspaceFolder}/samples/dotnet"
            },
            "problemMatcher": "$msCompile",
            "icon": {
                "id": "cloud-download",
                "color": "terminal.ansiBlue"
            }
        },
        {
            "label": "dotnet: format",
            "type": "shell",
            "command": "dotnet",
            "args": ["format", "microsoft-foundry-jumpstart-samples.slnx"],
            "options": {
                "cwd": "${workspaceFolder}/samples/dotnet"
            },
            "problemMatcher": [],
            "icon": {
                "id": "code",
                "color": "terminal.ansiMagenta"
            }
        },
        {
            "label": "dotnet: format (verify)",
            "type": "shell",
            "command": "dotnet",
            "args": ["format", "microsoft-foundry-jumpstart-samples.slnx", "--verify-no-changes"],
            "options": {
                "cwd": "${workspaceFolder}/samples/dotnet"
            },
            "problemMatcher": [],
            "group": "test",
            "icon": {
                "id": "verified",
                "color": "terminal.ansiGreen"
            }
        },
        {
            "label": "dotnet: test (unit)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test",
                "--solution",
                "microsoft-foundry-jumpstart-samples.slnx",
                "--filter",
                "TestCategory=Unit",
                "--configuration",
                "Release",
                "--no-restore",
                "--results-directory",
                "./TestResults",
                "--coverage",
                "--coverage-output-format",
                "cobertura",
                "--report-trx"
            ],
            "options": {
                "cwd": "${workspaceFolder}/samples/dotnet"
            },
            "problemMatcher": "$msCompile",
            "group": "test",
            "icon": {
                "id": "beaker",
                "color": "terminal.ansiCyan"
            }
        },
        {
            "label": "dotnet: code coverage (report)",
            "type": "shell",
            "command": "reportgenerator",
            "args": [
                "-reports:TestResults/**/*.cobertura.xml",
                "-targetdir:TestResults/CoverageReport",
                "-reporttypes:'Html;MarkdownSummaryGithub;'",
                "-assemblyfilters:+MicrosoftFoundryJumpstart.*"
            ],
            "options": {
                "cwd": "${workspaceFolder}/samples/dotnet"
            },
            "problemMatcher": [],
            "icon": {
                "id": "graph",
                "color": "terminal.ansiMagenta"
            }
        }
    ]
}
