# Microsoft Foundry Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Unpublished Agent (Development Mode)
# ============================================================================
# Your Microsoft Foundry project endpoint
# Format: https://<foundry-resource>.services.ai.azure.com/api/projects/<project-name>
PROJECT_ENDPOINT=

# Model deployment name to use (e.g., gpt-5-mini, gpt-5.2-chat, gpt-4o-mini)
# This should match a deployment in your Azure AI Foundry project
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-5-mini

# ============================================================================
# Published Agent (Production Mode)
# ============================================================================
# Your Agent Application endpoint
# Format: https://<foundry-resource>.services.ai.azure.com/api/projects/<project-name>/applications/<app-name>/protocols
AZURE_AI_APPLICATION_ENDPOINT=

# ============================================================================
# Optional Settings
# ============================================================================

# Cosmos DB for persistent chat thread storage
# Format: AccountEndpoint=https://<account>.documents.azure.com:443/;AccountKey=...
COSMOS_DB_CONNECTION_STRING=

# Redis for persistent chat thread storage
# Format: redis://localhost:6379 or rediss://<host>:6380
# For Azure Managed Redis, use Azure AD authentication (see RedisChatMessageStore docs)
REDIS_URL=

# For local development and debugging
# AZURE_LOG_LEVEL=DEBUG
